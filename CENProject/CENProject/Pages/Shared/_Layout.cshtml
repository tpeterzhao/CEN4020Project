<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CEN4020Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header>
        <div class="header">
            <div class="logo">
                <img src="~/CCSC-Logo.gif" alt="" style="width: 100px; height: 100px; margin-left:20px">
                <h1>CPMS</h1>
            </div>

        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer">
            <p>
                Organization Requesting Service<br>
                Consortium for Computing Sciences in Colleges Midwest Region (CCSCMW)<br />
                Name: Steve Smith<br />
                Title: CCSCMW Papers Chair<br />
                Phone: 1 (813) 421-6968<br />
                Email: stevesmith@ccscmw.com
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
